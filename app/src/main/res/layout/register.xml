<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <android.support.v7.widget.Toolbar
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/main_toolbar"
        android:background="#ff1b1b1b">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:background="@drawable/back"
                android:layout_marginLeft="10sp"
                android:id="@+id/b_return"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="250sp"
        android:layout_height="350sp"
        android:scrollbars="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/main_toolbar"
        android:background="#19000000"
        android:layout_marginTop="70sp"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <Button
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:text="@string/btn_avatar"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"
                android:id="@+id/btn_avatar"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/user_avatar_select"
                fresco:roundAsCircle="true"
                fresco:backgroundImage="@color/buttonColor"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/identification"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:id="@+id/r_t_account"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/user_avatar_select"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/password"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:id="@+id/r_password"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/r_et_account"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_account_default"
                android:visibility="invisible"
                android:textColor="#ffffff"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/r_t_account"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.example.samsung.Others.LineEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r_et_password"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:hint="@string/remind_password"
                android:background="@null"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_below="@+id/r_password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.example.samsung.Others.LineEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r_et_account"
                android:hint="@string/remind_account"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@null"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_below="@+id/r_t_account"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/password_sure"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:id="@+id/r_password_sure"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/r_et_password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.example.samsung.Others.LineEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r_et_password_sure"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:hint="@string/remind_password_sure"
                android:background="@null"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_below="@+id/r_password_sure"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/name"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:id="@+id/r_t_name"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/r_et_password_sure"
                android:layout_alignParentLeft="true"/>

            <com.example.samsung.Others.LineEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r_et_name"
                android:hint="@string/remind_name"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@null"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_below="@+id/r_t_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/signature"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:id="@+id/r_t_signature"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/r_et_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.example.samsung.Others.LineEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r_et_signature"
                android:hint="@string/remind_signature"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@null"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_below="@+id/r_t_signature"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/age"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:id="@+id/r_t_age"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/r_et_signature"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.example.samsung.Others.LineEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r_et_age"
                android:hint="@string/remind_age"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@null"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_below="@+id/r_t_age"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/sex"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:id="@+id/sex"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/r_et_age"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:id="@+id/btn_male"
                android:background="@drawable/avator_boy_unselect"
                android:layout_below="@+id/sex"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:id="@+id/btn_female"
                android:background="@drawable/avator_girl_unselect"
                android:layout_toRightOf="@+id/btn_male"
                android:layout_marginLeft="10sp"
                android:layout_alignTop="@+id/btn_male"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/phone"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:id="@+id/r_t_phone"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/btn_male"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:background="@drawable/round_button"
                android:text="@string/sure"
                android:textColor="#ffffff"
                android:id="@+id/b_sure"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_below="@+id/r_t_phone"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="250sp"
        android:layout_height="20sp"
        android:paddingTop="0sp"
        android:paddingBottom="0sp"
        android:id="@+id/btn_pull_more"
        android:text="@string/pull_more"
        android:textColor="#ffffff"
        android:background="#19000000"
        android:layout_below="@+id/scrollView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
