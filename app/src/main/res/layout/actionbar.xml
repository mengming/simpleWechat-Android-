<?xml version="1.0" encoding="utf-8"?>
<com.example.samsung.ActionbarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30sp"
    android:id="@+id/actionbar"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#AF3F34">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/tv_app_name"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_name_actionbar"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/tv_app_name"
        android:layout_toRightOf="@+id/tv_app_name"
        android:layout_toEndOf="@+id/tv_app_name" />

    <ImageButton
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/actionbar_more"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/actionbar_add_friend"
        android:background="@drawable/actionbar_add_icon"
        android:layout_toLeftOf="@+id/actionbar_more"
        android:layout_toStartOf="@+id/actionbar_more" />

    <ImageButton
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:id="@+id/actionbar_self_information"
        android:layout_toLeftOf="@+id/actionbar_add_friend"
        android:layout_toStartOf="@+id/actionbar_add_friend" />


</com.example.samsung.ActionbarLayout>
